@article{chalaviAbnormalHippocampalMorphology2014,
  title = {Abnormal Hippocampal Morphology in Dissociative Identity Disorder and Post‐traumatic Stress Disorder Correlates with Childhood Trauma and Dissociative Symptoms},
  author = {Chalavi, Sima and Vissia, Eline M. and Giesen, Mechteld E. and Nijenhuis, Ellert R.S. and Draijer, Nel and Cole, James H. and Dazzan, Paola and Pariante, Carmine M. and Madsen, Sarah K. and Rajagopalan, Priya and Thompson, Paul M. and Toga, Arthur W. and Veltman, Dick J. and Reinders, Antje A.T.S.},
