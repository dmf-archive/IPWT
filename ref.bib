@article{budsonConsciousnessMemorySystem2022,
  title = {Consciousness as a Memory System},
  author = {Budson, Andrew E. and Richman, Kenneth A. and Kensinger, Elizabeth A.},
  date = {2022-12},
  journaltitle = {Cognitive and Behavioral Neurology},
  shortjournal = {Cogn. Behav. Neurol.},
