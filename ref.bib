@online{stikvoortNonequilibriumBrainDynamics2024,
  title = {Nonequilibrium Brain Dynamics Elicited as the Origin of Perturbative Complexity},
  author = {Stikvoort, Wiep and Pérez-Ordoyo, Eider and Mindlin, Iván and Escrichs, Anira and Sitt, Jacobo D. and Kringelbach, Morten L. and Deco, Gustavo and Perl, Yonatan Sanz},
